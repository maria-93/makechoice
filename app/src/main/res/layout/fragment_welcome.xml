<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="card"
            type="ru.kesva.makechoice.domain.model.Card"/>

        <variable
            name="viewModel"
            type="ru.kesva.makechoice.ui.viewmodel.SharedViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/dotted_line_for_welcome_text"
                android:text="@string/welcome_text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_add_variants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_variants"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_welcome"
                app:layout_constraintStart_toStartOf="@+id/tv_welcome"
                app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

            <Button
                android:id="@+id/button_farther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.nextButtonClicked(buttonFarther, progressBar)}"
                android:text="@string/button_farther"
                android:theme="@style/NextButtonTheme"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@id/fab_add_card"
                app:layout_constraintLeft_toLeftOf="@id/fab_delete_card"
                app:layout_constraintRight_toRightOf="@id/fab_add_card"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/fab_add_card"
                app:layout_constraintStart_toStartOf="@id/button_farther"
                app:layout_constraintEnd_toEndOf="@id/button_farther"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:adapter="@{viewModel.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tv_add_variants"
                app:setDismissHelper="@{viewModel.action}" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:recyclerView="@{recyclerView}"
                app:viewModel="@{viewModel}"
                android:src="@drawable/add_for_fab"
                android:theme="@style/FabButtonTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view"
                app:maxImageSize="30dp" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_delete_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="invisible"
                android:src="@drawable/delete_for_fab"
                android:theme="@style/FabButtonTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"
                app:maxImageSize="30dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>